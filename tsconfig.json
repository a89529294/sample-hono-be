{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": "src", // enables direct import from src
    "paths": {
      "trpc/*": ["trpc/*"],
      "db/*": ["db/*"],
      "helpers/*": ["helpers/*"]
    },
    "moduleResolution": "Bundler"
  },
  "exclude": ["node_modules", "dist"]
}
